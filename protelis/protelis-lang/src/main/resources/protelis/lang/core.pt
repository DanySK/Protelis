module protelis:lang:core

public def identity(a) { a } 

public def or(a, b) {
	a || b
}

public def and(a, b) {
	a && b
}

public def not(a) {
	!a
}

public def sum(a, b) {
	a + b
}

public def diff(a, b) {
	a - b
}

/**
 * Low pass filter.
 * 
 * Return type: (num, num) -> num.
 */
public def exponentialFilter(signal, a) {
	rep (v <- signal) {
		signal * a + v * (1 - a)
	}
}